<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/topbg"
            android:layout_width="50dp"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="45dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/opensanbold"
            android:id="@+id/a_loginFragmentTitle"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Hi!, \nLet get you start!" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textColor="#7A7A7A"
            android:id="@+id/gotosignin"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/blinker"
            android:layout_height="wrap_content"
            android:text="Already have account? Sign in" />


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            app:cardBackgroundColor="#FDCE84"
            android:layout_marginTop="60dp"
            android:layout_marginStart="50dp"
            app:cardCornerRadius="10dp"
            android:layout_height="60dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/emaillogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:fontFamily="@font/opensanregular"
                    android:maxLines="1"
                    android:text="Enter your email"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:cardCornerRadius="10dp"
            android:layout_height="60dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/passwordLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:fontFamily="@font/opensanregular"
                    android:maxLines="1"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="300dp"

            app:cardBackgroundColor="#B12341"
            android:layout_marginTop="120dp"
            android:layout_gravity="bottom|center"
            android:id="@+id/registerfunction"
            app:cardCornerRadius="8dp"
            android:layout_height="65dp">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/blinker"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Register" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/goBackauthen"
            android:fontFamily="@font/blinker"
            android:layout_height="wrap_content"
            android:text="Go back?" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

