<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"

    android:background="@drawable/borderimageview"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="10dp"
        android:id="@+id/avatar"
        android:layout_gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/defaultprofile" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyen Quoc Hung"
            android:textSize="18sp"
            android:id="@+id/name"
            android:textColor="@color/black"
            android:fontFamily="@font/robotomedium" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:drawableStart="@drawable/baseline_qr_code_scanner_24"
                android:drawableTint="@color/white"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|right"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:backgroundTint="#1b60e0"
                app:cornerRadius="8dp"
                android:fontFamily="@font/robotomedium"
                android:id="@+id/acceptaddFriend">
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:drawableStart="@drawable/baseline_qr_code_scanner_24"
                android:drawableTint="@color/white"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|right"
                android:text="Remove"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/gray"
                app:cornerRadius="8dp"
                android:fontFamily="@font/robotomedium"
                android:id="@+id/removeaddFriend">
            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
